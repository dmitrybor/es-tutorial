          },
          "keyword": {
            "type": "keyword",
            "normalizer": "case_insensitive"
          }
        }
      },
      "user_id": {
        "type": "integer"
      },
      "owner": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "partial": {
            "type": "text",
            "analyzer": "contains_analyzer",
            "search_analyzer": "standard"
          },
          "keyword": {
            "type": "keyword",
