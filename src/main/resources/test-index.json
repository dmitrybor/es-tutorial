{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.max_ngram_diff": 15,
    "analysis": {
      "analyzer": {
        "contains_analyzer": {
          "tokenizer": "one_gram_contains_tokenizer",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "contains_analyzer_without_space": {
          "tokenizer": "one_gram_contains_tokenizer",
          "filter": [
            "lowercase",
            "asciifolding"
          ],
          "char_filter": [
            "remove_space_filter"
          ]
        },
        "standard_and_fold_analyzer": {
          "char_filter": [],
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "tokenizer": {
        "one_gram_contains_tokenizer": {
          "type": "ngram",
          "min_gram": 1,
          "max_gram": 15,
          "token_chars": [
            "letter",
            "digit",
            "punctuation"
          ]
        }
      },
      "normalizer": {
        "lower_and_fold_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "without_space": {
          "type": "custom",
          "char_filter": [
            "remove_space_filter"
          ],
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "char_filter": {
        "remove_space_filter": {
          "type": "pattern_replace",
          "pattern": "\\s",
          "replacement": ""
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "gls_id": {
        "type": "integer"
      },
      "artists": {
        "type": "text",
        "analyzer": "standard_and_fold_analyzer",
        "fields": {
          "phrase": {
            "type": "keyword",
            "normalizer": "lower_and_fold_normalizer"
          },
          "partial": {
            "type": "text",
            "analyzer": "contains_analyzer",
            "search_analyzer": "standard_and_fold_analyzer"
          },
          "raw": {
            "type": "keyword"
          }
        }
      },
      "song_type": {
        "type": "text"
      },
      "album_title": {
        "type": "text",
        "analyzer": "standard_and_fold_analyzer",
        "fields": {
          "phrase": {
            "type": "keyword",
            "normalizer": "lower_and_fold_normalizer"
          },
          "partial": {
            "type": "text",
            "analyzer": "contains_analyzer",
            "search_analyzer": "standard_and_fold_analyzer"
          },
          "raw": {
            "type": "keyword"
          }
        }
      },
      "lyrics": {
        "type": "text",
        "analyzer": "standard_and_fold_analyzer",
        "norms": false
      },
      "release_year": {
        "type": "integer"
      },
      "copyright_year": {
        "type": "integer"
      },
      "duration": {
        "type": "integer"
      },
      "song_title": {
        "type": "text",
        "analyzer": "standard_and_fold_analyzer",
        "fields": {
          "phrase": {
            "type": "keyword",
            "normalizer": "lower_and_fold_normalizer"
          },
          "partial": {
            "type": "text",
            "analyzer": "contains_analyzer",
            "search_analyzer": "standard_and_fold_analyzer"
          },
          "raw": {
            "type": "keyword"
          }
        }
      },
      "writers": {
        "type": "text",
        "analyzer": "standard_and_fold_analyzer",
        "fields": {
          "phrase": {
            "type": "keyword",
            "normalizer": "lower_and_fold_normalizer"
          },
          "partial": {
            "type": "text",
            "analyzer": "contains_analyzer",
            "search_analyzer": "standard_and_fold_analyzer"
          },
          "raw": {
            "type": "keyword"
          }
        }
      },
      "country_control_percent": {
        "type": "double"
      },
      "album_art_link": {
        "type": "text"
      },
      "mood": {
        "type": "keyword",
        "normalizer": "lower_and_fold_normalizer"
      },
      "versions": {
        "type": "keyword",
        "normalizer": "lower_and_fold_normalizer"
      },
      "vocal_mix": {
        "type": "keyword",
        "normalizer": "lower_and_fold_normalizer"
      },
      "themes": {
        "type": "keyword",
        "normalizer": "lower_and_fold_normalizer"
      },
      "genres": {
        "type": "keyword",
        "normalizer": "lower_and_fold_normalizer"
      },
      "bpm": {
        "type": "integer"
      },
      "expired": {
        "type": "boolean"
      },
      "label": {
        "type": "text",
        "fields": {
          "raw": {
            "type": "keyword"
          }
        }
      },
      "song_code": {
        "normalizer": "without_space",
        "type": "keyword",
        "fields": {
          "partial": {
            "type": "text",
            "analyzer": "contains_analyzer_without_space"
          },
          "raw": {
            "type": "keyword"
          }
        }
      },
      "isrc": {
        "type": "keyword",
        "normalizer": "lower_and_fold_normalizer",
        "fields": {
          "partial": {
            "type": "text",
            "analyzer": "contains_analyzer"
          },
          "raw": {
            "type": "keyword"
          }
        }
      },
      "work_attached": {
        "type": "boolean"
      },
      "hi_resolution": {
        "type": "boolean"
      },
      "owner_id": {
        "type": "integer"
      },
      "notes": {
        "type": "text"
      },
      "watermarked": {
        "type": "boolean"
      },
      "creation_time": {
        "type": "date"
      }
    }
  }
}
